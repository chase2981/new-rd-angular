{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "build",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "skipLibCheck": false,
    "types": [
      "bootstrap",
      "fullcalendar",
      "jquery",
      "toastr"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom",
      "es2015"
    ]
  },
  "files": [
    "./build/datetime.ts"
  ],
  "include": [
    "**/*.d.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "./datetime.umd.js",
    "flatModuleId": "@rd/datetime"
  }
}
