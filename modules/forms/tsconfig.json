{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "build",
    "module": "umd",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "skipLibCheck": false,
    "types": [
      "ckeditor",
      "jquery"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom",
      "es2015"
    ]
  },
  "files": [
    "./build/forms.ts"
  ],
  "include": [
    "./build/typings.d.ts"
  ],
  "exclude": [
    "node_modules/**",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "./forms.umd.js",
    "flatModuleId": "@rd/forms"
  }
}
